<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
    
    <path>button_light.ac</path>
    
    <effect>
        <inherits-from>Effects/model-transparent</inherits-from>
        <object-name>transparent_button</object-name>
        <object-name>light_Sphere</object-name>
        <object-name>light_Sphere_hot</object-name>
    </effect>
    
    <animation> 
        <type>material</type>
        <object-name>box_button</object-name>
        <object-name>button_base</object-name>
        <texture>Pictures/G91-Al-dark.png</texture>
        <ambient>
            <red>0.3</red>
            <green>0.3</green>
            <blue>0.3</blue>
        </ambient>
        <emission>
            <red>0.051</red>
            <green>0.0</green>
            <blue>0.0</blue>
            <factor-prop>sim/G91/re_emit/gauge_red_light</factor-prop>
        </emission>
    </animation>
    
    <animation> 
        <type>material</type>
        <object-name>silver_box_button</object-name>
        <texture>Pictures/G91-Al-Light.png</texture>
        <ambient>
            <red>0.6</red>
            <green>0.6</green>
            <blue>0.6</blue>
        </ambient>
        <emission>
            <red>0.07</red>
            <green>0.0</green>
            <blue>0.0</blue>
            <factor-prop>sim/G91/re_emit/gauge_red_light</factor-prop>
        </emission>
    </animation>
    
    <animation> 
        <type>material</type>
        <object-name>Cone_reflect</object-name>
        <texture>Pictures/G91-Red_01.png</texture>
        <ambient>
            <red>1.0</red>
            <green>0.0</green>
            <blue>0.0</blue>
        </ambient>
        <emission>
            <red>1.0</red>
            <green>0.0</green>
            <blue>0.0</blue>
            <factor-prop>sim/G91/switchs/cockpit/lg_battery_on</factor-prop>
        </emission>
    </animation>
    
    <animation> 
        <type>material</type>
        <object-name>transparent_button</object-name>
        <texture>Pictures/G91-Red_01.png</texture>
        <transparency>
            <alpha>1.0</alpha>
            <factor-prop>sim/G91/switchs/cockpit/lg_battery_transparent</factor-prop>
        </transparency>
        <ambient>
            <red>0.1</red>
            <green>0.0</green>
            <blue>0.0</blue>
        </ambient>
        <emission>
            <red>0.1</red>
            <green>0.0</green>
            <blue>0.0</blue>
            <factor-prop>sim/G91/re_emit/gauge_red_light</factor-prop>
        </emission>
        <specular>
            <red>0.5</red>
            <green>0.0</green>
            <blue>0.0</blue>
        </specular>
    </animation>
    
    <animation> 
        <type>material</type>
        <object-name>light_Sphere</object-name>
        <transparency>
            <alpha>0.5</alpha>
        </transparency>
        <ambient>
            <red>0.0</red>
            <green>0.0</green>
            <blue>0.0</blue>
        </ambient>
        <emission>
            <red>1.0</red>
            <green>0.0</green>
            <blue>0.0</blue>
            <factor-prop>sim/G91/switchs/cockpit/lg_battery_on</factor-prop>
        </emission>
    </animation>
    
    <animation> 
        <type>material</type>
        <object-name>light_Sphere_hot</object-name>
        <transparency>
            <alpha>0.5</alpha>
        </transparency>
        <ambient>
            <red>0.0</red>
            <green>0.0</green>
            <blue>0.0</blue>
        </ambient>
        <emission>
            <red>1.0</red>
            <green>0.3</green>
            <blue>1.0</blue>
            <factor-prop>sim/G91/switchs/cockpit/lg_battery_on</factor-prop>
        </emission>
    </animation>
    
    <model>
        <condition>
            <greater-than-equals>
                <property>sim/G91/switchs/cockpit/lg_battery_on</property>
                <value>1</value>
            </greater-than-equals>
        </condition>
        <name>pb_light_effect</name>
        <path>Aircraft/G91/Models/Parts/Cockpit/Effects/lights/procedural_light_cockpit_advise_red.xml</path>
        <offsets>
            <x-m> 0.03</x-m>
            <y-m> 0.0 </y-m>
            <z-m> 0.0 </z-m>
        </offsets>
    </model>
    
</PropertyList>

<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
    
    <name>G91_F1Menu_dialog</name>
    <layout>vbox</layout>
    <default-padding>7</default-padding>
    <modal>false</modal>
    <width>275</width>

    <!-- title bar -->
    <group>
        <layout>hbox</layout>
        <empty><stretch>true</stretch></empty>
        <text>
            <label>The [F1] key open the Menu dialog</label>
        </text>
        <empty><stretch>true</stretch></empty>
        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <border>2</border>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("sim/G91/menu/command",0);
                </script>
            </binding>
        </button>
    </group>
    
    <hrule/>
    
    <group>
        <layout>table</layout>
        <button>
            <row>0</row>
            <col>0</col>
            <pref-width>250</pref-width>
            <legend>Pilot assistant</legend>
            <halign>left</halign>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("sim/G91/menu/menuActive","Pilot-Assistant");
                </script>
            </binding>
        </button>
        <button>
            <row>1</row>
            <col>0</col>
            <pref-width>250</pref-width>
            <legend>Aircraft configuration</legend>
            <halign>left</halign>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("sim/G91/menu/menuActive","Configuration");
                </script>
            </binding>
        </button>
        <button>
            <row>2</row>
            <col>0</col>
            <pref-width>250</pref-width>
            <legend>Engine start</legend>
            <halign>left</halign>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("sim/G91/menu/menuActive","Engine");
                </script>
            </binding>
        </button>
        <button>
            <row>3</row>
            <col>0</col>
            <pref-width>250</pref-width>
            <legend>Configure electric system</legend>
            <halign>left</halign>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("sim/G91/menu/menuActive","Electric");
                </script>
            </binding>
        </button>
        <button>
            <row>4</row>
            <col>0</col>
            <pref-width>250</pref-width>
            <legend>Configure ADF-VOR_TACAN Radio</legend>
            <halign>left</halign>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("sim/G91/menu/menuActive","Radio-Near-Selector");
                </script>
            </binding>
        </button>
        <button>
            <row>5</row>
            <col>0</col>
            <pref-width>250</pref-width>
            <legend>PHI doppler radar navigation system</legend>
            <halign>left</halign>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("sim/G91/menu/menuActive","PHI");
                </script>
            </binding>
        </button>
        <button>
            <row>6</row>
            <col>0</col>
            <pref-width>250</pref-width>
            <legend>Configure VHF-UHF radio</legend>
            <halign>left</halign>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("sim/G91/menu/menuActive","radio_ptr175");
                </script>
            </binding>
        </button>
        <button>
            <row>7</row>
            <col>0</col>
            <pref-width>250</pref-width>
            <legend>Set livery</legend>
            <halign>left</halign>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("sim/G91/menu/menuActive","Livery");
                </script>
            </binding>
        </button>
        <button>
            <row>8</row>
            <col>0</col>
            <pref-width>250</pref-width>
            <legend>Activate the take-off JATO rockets</legend>
            <halign>left</halign>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("sim/G91/menu/menuActive","JATO");
                </script>
            </binding>
        </button>
        <button>
            <row>9</row>
            <col>0</col>
            <pref-width>250</pref-width>
            <legend>Acrobatic configuration</legend>
            <halign>left</halign>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("sim/G91/menu/menuActive","Acro");
                </script>
            </binding>
        </button>
        <button>
            <row>10</row>
            <col>0</col>
            <pref-width>250</pref-width>
            <legend>Accessories</legend>
            <halign>left</halign>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("sim/G91/menu/menuActive","Accessories");
                </script>
            </binding>
        </button>
        <button>
            <row>11</row>
            <col>0</col>
            <pref-width>250</pref-width>
            <legend>Special effects</legend>
            <halign>left</halign>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("sim/G91/menu/menuActive","Effects");
                </script>
            </binding>
        </button>
    </group>

    <hrule/>

    <group>
        <layout>table</layout>
        <button>
            <row>0</row>
            <col>0</col>
            <pref-width>250</pref-width>
            <legend>Test section</legend>
            <halign>left</halign>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("sim/G91/menu/menuActive","TestSystemsPlane");
                </script>
            </binding>
        </button>
    </group>

    <hrule/>

</PropertyList>

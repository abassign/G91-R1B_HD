<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
    
    <name>G91_Help_dialog</name>
    <layout>vbox</layout>
    <default-padding>7</default-padding>
    <modal>false</modal>
    <width>700</width>

    <!-- title bar -->
    <group>
        <layout>hbox</layout>
        <empty><stretch>true</stretch></empty>
        <text>
            <label>Accessories</label>
        </text>
        <empty><stretch>true</stretch></empty>
        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <border>2</border>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("sim/G91/menu/command",2);
                </script>
            </binding>
        </button>
    </group>
    
    <hrule/>
    
    <group>
        <layout>table</layout>
        <checkbox>
            <row>0</row>
            <col>0</col>
            <halign>fill</halign>
            <property>sim/G91/parts/SFOM_83A/show</property>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </checkbox>
        <text>
            <label>Show / hide SFOM 83A</label>
            <halign>right</halign>
            <row>0</row>
            <col>1</col>
        </text>
    </group>
    
    <hrule/>
    
    <group>
        <layout>table</layout>
        <checkbox>
            <row>0</row>
            <col>0</col>
            <halign>fill</halign>
            <property>sim/G91/parts/cloche/show</property>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </checkbox>
        <text>
            <label>Show / hide cloche</label>
            <halign>right</halign>
            <row>0</row>
            <col>1</col>
        </text>
    </group>
    
    <hrule/>
    
    <group>
        <layout>table</layout>
        <checkbox>
            <row>0</row>
            <col>0</col>
            <halign>fill</halign>
            <property>sim/G91/accessories/staircase</property>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </checkbox>
        <text>
            <label>Staircase for pilot</label>
            <halign>right</halign>
            <row>0</row>
            <col>1</col>
        </text>
    </group>
    
    <hrule/>

    <group>
        <layout>table</layout>
        <text>
            <label>Automatic tracking</label>
            <halign>left</halign>
            <row>0</row>
            <col>0</col>
        </text>
        <checkbox>
            <row>0</row>
            <col>1</col>
            <halign>fill</halign>
            <property>sim/G91/accessories/standIlluminators/autotraking</property>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("sim/G91/accessories/standIlluminators/autotraking",1);
                </script>
            </binding>
        </checkbox>
        <text>
            <label>Intensity</label>
            <halign>left</halign>
            <row>0</row>
            <col>2</col>
        </text>
        <slider>
            <name>illuminators intensity</name>
            <row>0</row>
            <col>3</col>
            <property>sim/G91/accessories/standIlluminators/intensity</property>
            <min>0.0</min>
            <max>1.0</max>
            <step>0.1</step>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </slider>
        <text>
            <label>Min ambient light</label>
            <halign>left</halign>
            <row>0</row>
            <col>4</col>
        </text>
        <slider>
            <name>illuminator show mil lighth</name>
            <row>0</row>
            <col>5</col>
            <property>sim/G91/accessories/standIlluminators/minAmbientLight</property>
            <min>0.0</min>
            <max>1.0</max>
            <step>0.05</step>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </slider>
        <radio>
            <row>0</row>
            <col>6</col>
            <halign>fill</halign>
            <property>sim/G91/accessories/standIlluminators/I01/light/active</property>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </radio>
        <radio>
            <row>0</row>
            <col>7</col>
            <halign>fill</halign>
            <property>sim/G91/accessories/standIlluminators/I02/light/active</property>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </radio>
        <radio>
            <row>0</row>
            <col>8</col>
            <halign>fill</halign>
            <property>sim/G91/accessories/standIlluminators/I03/light/active</property>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </radio>
        <radio>
            <row>0</row>
            <col>9</col>
            <halign>fill</halign>
            <property>sim/G91/accessories/standIlluminators/I04/light/active</property>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </radio>
    </group>

    <hrule/>

    <group>
        <layout>table</layout>
        <text>
            <label>RWY edge LGT</label>
            <halign>left</halign>
            <row>0</row>
            <col>0</col>
        </text>
        <checkbox>
            <row>0</row>
            <col>1</col>
            <halign>fill</halign>
            <property>sim/G91/accessories/LEMIR14/isOperative</property>
            <live>true</live>
            <binding>
                <command>nasal</command>
                <script>
                    if (getprop("sim/G91/accessories/LEMIR14/isOperative") == 3) {
                        setprop("sim/G91/accessories/LEMIR14/isOperative",9);
                    } else {
                        if (getprop("sim/G91/accessories/LEMIR14/isOperative") == 0) {
                            setprop("sim/G91/accessories/LEMIR14/isOperative",1);
                        };
                    };
                </script>
            </binding>
        </checkbox>
        <radio>
            <row>0</row>
            <col>3</col>
            <label>Cup</label>
            <halign>fill</halign>
            <property>sim/G91/accessories/LEMIR14/type-cup-14</property>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("sim/G91/accessories/LEMIR14/type",0);
                </script>
            </binding>
        </radio>
        <radio>
            <row>0</row>
            <col>4</col>
            <label>Cone</label>
            <halign>fill</halign>
            <property>sim/G91/accessories/LEMIR14/type-cone-light</property>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("sim/G91/accessories/LEMIR14/type",1);
                </script>
            </binding>
        </radio>
        <text>
            <label>Breadth:</label>
            <halign>left</halign>
            <row>0</row>
            <col>5</col>
        </text>
        <slider>
            <name>illuminators intensity</name>
            <row>0</row>
            <col>6</col>
            <property>sim/G91/accessories/LEMIR14/runwayBreadth</property>
            <min>5.0</min>
            <max>40.0</max>
            <step>5</step>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </slider>
        <text>
            <label>Step:</label>
            <halign>left</halign>
            <row>0</row>
            <col>7</col>
        </text>
        <slider>
            <name>illuminators intensity</name>
            <row>0</row>
            <col>8</col>
            <property>sim/G91/accessories/LEMIR14/lightStep</property>
            <min>15.0</min>
            <max>60.0</max>
            <step>5</step>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </slider>
        <text>
            <label>Int:</label>
            <halign>left</halign>
            <row>0</row>
            <col>9</col>
        </text>
        <slider>
            <name>illuminators intensity</name>
            <row>0</row>
            <col>10</col>
            <property>sim/G91/accessories/LEMIR14/light/intensity</property>
            <min>0.1</min>
            <max>1.0</max>
            <step>0.1</step>
            <live>true</live>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </slider>
    </group>

    <hrule/>

</PropertyList>

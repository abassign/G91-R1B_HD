					<height>30</height>
					<enable>
						<property>/sim/fgcamera/dialogs/fgcamera-main/settings/enable-power-plant-vibration</property>
					</enable>
					<binding>
						<command>dialog-show</command>
						<dialog-name>power-plant-vibration</dialog-name>

			<group>
				<layout>hbox</layout>
				<text>
					<label>LP filter</label>
					<halign>left</halign>
				</text>
				<input>
					<live>1</live>
					<halign>right</halign>
					<pref-width>100</pref-width>
					<height>25</height>
					<property>/sim/fgcamera/current-camera/config/head-tracker/filter-time</property>
